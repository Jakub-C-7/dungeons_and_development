<% if (quest != nil) then %>
    <div class="p-[10px] hover:bg-slate-100 quest-container">
            <%= quest['name'] %>
            <div class="">
                <% quest['interests'].each do |interest| %>
                    <p class="interest-tag">
                        <%= interest %>
                    </p>
                <% end %>
            </div>
            <div id="quest-description" class="">
                <%= quest['description'] %>
            </div>

            <div class="btn-group" id= "quest-status-<%=quest['id']%>" role="group" aria-label="Basic example">
                    <%= render partial: 'tavern/quest_status', locals: {questid: quest['id'], status: quest['status']} %>

            </div>
        </div>
<% end %>