<div class="flex flex-col mx-auto items-center justify-center bg-primaryFaded mt-16 p-4 w-2/3">

  <h2 class="head-text">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'w-3/4 flex flex-col justify-center content-center items-center gap-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions btn-primary-dark-text ">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

