    <div class="flex flex-col xl:flex-row mb-12 p-12 w-full h-full"> 
        <%= form_tag({:controller => "active_quests", :action => "refreshPathway", :method => "post" }, {:class => "flex flex-col w-1/4"}) do  %>

            <h2> My Active Quests </h2> 

            <% @current_pathways.each do |pathway| %>
                <label class="active-quest-btn">
                    <%= radio_button_tag :selected_pathway, pathway.pathway_id, class:"character-select hidden z-50 cursor-pointer", required: 'required', checked: true, :onclick => "this.form.requestSubmit();" %>
                    <%= label_tag pathway.id, "Quest!!! #{pathway.pathway_id}: #{pathway.name}", class: 'z-0 pointer-events-none' %>
                </label>
            <% end %>

        <% end %>

        <div class="flex flex-row mx-auto justify-center items-center text-center gap-4 w-3/4">

            <div class="flex flex-col self-start items-start justify-start w-2/3 text-start "> 
                <div id="active_sections_partial_div" class="self-center mb-2"> 
                    <%= render partial: 'active_quests/active_sections', locals: {active_sections: nil} %>
                </div>

                <div id="active_tasks_partial_div" class="overflow-y-scroll max-h-full"> 
                    <%= render partial: 'active_quests/active_tasks', locals: {active_tasks: nil} %>
                </div>
            </div>

            <div class="flex flex-col self-start items-start justify-start w-1/4 " >
                <%= image_tag ("map1.jpg"), width: '100%', height: '100%' %> 

                <h2 class="p-1 btn-primary sub-link" id="toggleEdit">Switch to map view</h2> 
            </div>
        
        </div>

    </div>

