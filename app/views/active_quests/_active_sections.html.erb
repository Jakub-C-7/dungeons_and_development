<% if active_sections != nil %>

    <%= form_tag({:controller => "active_quests", :action => "refreshSection", :method => "post" }, {:class => "flex flex-col space-y-5 items-center"}) do  %>

        <%= radio_button_tag :selected_pathway, @selected_pathway_id, class:"character-select hidden z-0 pointer-events-none", required: 'required', checked: true %>

        <%= select_tag "select_section" , options_from_collection_for_select(@current_sections, "id", "name", selected: @selected_section, include_blank: "- nothing selected -"), class:"grow text-center", :include_blank => '-- Select Section --', :onchange => "this.form.requestSubmit();"  %>
    
    <% end %>
<% end %>